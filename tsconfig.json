{
  "compilerOptions": {
    // "downlevelIteration": true, // useSearchParams
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, // on
    "noEmit": true,
    // "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.jsx",
    "**/*.tsx",
    "pages/api/blurImage.js",
    "components/MansonryView.tsx.back",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
